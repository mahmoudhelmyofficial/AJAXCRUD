@model IEnumerable<CRUDWithAJAX.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex">
    <a onclick="showInPopup('@Url.Action("Create","Students",null,Context.Request.Scheme)')"
        class="btn btn-primary">Create New</a>


        <a class="btn btn-outline-primary ms-4" id="btn" value="@Model.">Fade</a>

    <h2 id="test">Save</h2>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="line-parent">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 

                <a class="btn btn-danger js-delete"
                    data-id="@item.Id" >Delete</a>
            <a class="btn btn-outline-primary" id="btnval" value="@item.Age" hidden>Fade</a>
            </td>
        </tr>
}
    </tbody>
</table>